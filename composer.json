{
    "name": "kryuu-common/crypto-conditions",
    "description": "Base58 Encoding and Decoding Library for PHP",
    "repositories": [ 
        { "type": "composer", "url": "https://composer.ryuu.technology/packages/php/" }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test-lint": "phpcs",
        "test-lint-fix": "phpcbf",
        "test-unit": "phpunit",
        "test": "composer test-lint && composer test-unit"
    },
    "require": {
        "kryuu-common/buffer": "dev-master",
        "sop/asn1": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "KryuuCommon\\CryptoConditions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KryuuCommon\\CryptoConditionsTest\\":   "test/"
        }
    }
}